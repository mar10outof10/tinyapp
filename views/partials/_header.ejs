<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav align-items-center">
        <div class="col-auto">
          <a class="nav-item nav-link" href="/urls">My URLs</a>
        </div>
        <div class="col-auto">
          <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
        </div> 
        <div class="col-auto">
          <a class="nav-item nav-link" href="/register">Register</a>
        </div>
        <div class="col-auto">
          <% if(user){ %>
            <span class="align-middle">Logged in as user: <%= user.email %></span>
        </div>
        <div class="col-auto">
          <form class="logout" method="POST" action="/logout">
            <button type="submit" class="btn btn-primary">Logout</button>
          </form>
        </div>
          <% } else{ %>
          <form class="form-inline" method="POST" action="/login">
            <label for="username">Enter Username:</label>
            <input class="form-control" type="text" name="username" style="width: 200px; margin: 1em">
            <button type="submit" class="btn btn-primary">Submit</button>
          </form>
          <% } %>
        </div>
      </div>
    </div>
  </nav>
</header>